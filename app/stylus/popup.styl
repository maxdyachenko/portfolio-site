.popup-overlay
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background rgba(color_brand_black, .4)
	z-index 998
	.group
		display flex
		&:not(:first-of-type)
			margin-top 2rem
	.term
		flex-basis 30%
		flex-grow 0
		font 700 1.6rem / 1.2 Helvetica Neue Bold
	.desc
		flex-basis 70%
		flex-grow 0
		font 400 1.6rem / 1.4 Helvetica Neue
		a
			color color_brand_blue
	.popup
		position absolute
		top 50%
		left 50%
		transform translate3d(-50%,-50%,0)
		max-width 768px
		max-height 90%
		border-radius 1.5rem
		box-shadow 0 0 4px 2px rgba(0,0,0,0.35)
		background color_brand_white
		overflow-y auto
		z-index 999
		overflow-x hidden

	.popup-container
		position relative
		padding 5.5rem 2rem 2rem 2rem
		transform translate3d(0,0,0)
	.close
		position absolute
		top 0
		right 0
		padding 1rem
		cursor pointer
		.icon
			width 3.5rem
			height @width
	.gallery
		margin-top 2.5rem
		h2
			text-align center
			letter-spacing .2px
			font 700 1.8rem / 1.2 Helvetica Neue Bold
.block-test
	width 100px
	height 100px
	background black