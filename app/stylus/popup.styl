.popup-overlay
	display none
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background rgba(color_brand_black, .4)
	z-index 998
	.group
		display flex
		&:not(:first-of-type)
			margin-top 2rem
	.term
		flex-basis 30%
		flex-grow 0
		margin-right .5rem
		font 700 1.6rem / 1.2 Helvetica Neue Bold
	.desc
		flex-basis 70%
		flex-grow 0
		font 400 1.6rem / 1.4 Helvetica Neue
		a
			color color_brand_blue
	.popup
		position absolute
		top 50%
		left 50%
		transform translate3d(-50%,-50%,0)
		max-width 768px
		width 60%
		max-height 90%
		border-radius 1.5rem
		box-shadow 0 0 4px 2px rgba(0,0,0,0.35)
		background color_brand_white
		overflow-y auto
		z-index 999
		overflow-x hidden

	.popup-container
		position relative
		padding 5.5rem 2rem 2rem 2rem
		transform translate3d(0,0,0)
	.gallery
		margin-top 2.5rem
		width 100%
		h2
			text-align center
			margin-bottom 1rem
			letter-spacing .2px
			font 700 1.8rem / 1.2 Helvetica Neue Bold
	.item
		cursor pointer
.owl-nav [class*=owl-]
	position absolute
	width 2.8rem
	height 2.8rem
	border-color color_brand_white
	padding .5rem
	top 50%
	background none !important

.owl-prev
	border-bottom .3rem solid
	border-left @border-bottom
	transform translateY(-100%) rotate(45deg)
	left 1rem
.owl-next
	border-bottom .3rem solid
	border-left @border-bottom
	transform translateY(-100%) rotate(-135deg)
	right 1rem
.zoom-container
	position absolute
	top 0
	left 0
	display none
	flex-direction column
	justify-content center
	width 100%
	height 100%
	z-index 1000
	&.active
		display flex !important
.zoom-carousel
	position absolute
	top 50%
	transform translateY(-50%)
	z-index 1001
	.item
		margin-left 5%
		width 90%
.zoom-open .zoom-container
	background rgba(color_brand_black, .5)


@media screen and (max-width: 700px)
	.popup-overlay .popup
		width 80%
@media screen and (max-width: 500px)
	.popup-overlay .popup
		width 95%