input_padding = 1rem
.contact-page
	.content
		display block
		text-align center
	p
		text-align center
		font 400 1.8rem / 1.5 Helvetica Neue
	.socials
		display flex
		justify-content center
		.icon
			width 4rem
			height @width
			cursor pointer
		.glyph
			padding 1.5rem

	input
		margin-top 1rem
		padding input_padding
		width 100%
		border none
		border-bottom 2px solid color_brand_light_red
		font 400 1.6rem / 1.2 Helvetica Neue
		transition .3s
		//box-shadow 0px 0px 1px 1px rgba(color_brand_black,0.2)
		&:focus
			border-bottom 2px solid color_brand_red
	input[type='file']
		border none
		box-shadow none
	form
		display inline-block
		width 50%
		margin-top 2rem
		.red-button
			margin-top 2rem
			padding 0
			cursor pointer
		button
			width 100%
			padding input_padding
			font-size 1.6rem
			cursor pointer
	.small
		margin-top .7rem
		font-size 1.2rem
		font-style italic
	label
		display block
		text-align left
		letter-spacing .3px
		font 400 1.6rem / 1.2 Helvetica Neue
		margin-top 2rem
	.content-part
		opacity 0
		animation fadeIn ease-in 1
		animation-fill-mode forwards
		animation-duration .5s
		&:nth-of-type(1)
			animation-delay .5s
		&:nth-of-type(2)
			animation-delay 1s